{
  "name": "ecx-backend-default-template",
  "version": "1.0.0",
  "description": "The default template for the ECX 4.0 development team",
  "main": "dist/main",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:prod": "tsc -p tsconfig.prod.json",
    "build:dev": "tsc -p tsconfig.json",
    "clean": "rimraf ./dist",
    "start:prod": "npm run clean && npm run build:prod && NODE_ENV=production && node dist/main",
    "start:dev": "npm run clean && npm run build:dev && NODE_ENV=development && nodemon dist/main"
  },
  "keywords": [
    "ECX",
    "4.0",
    "devteam"
  ],
  "author": "github.com/tdadadavid",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventemitter2": "^6.4.9",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "mongoose": "^7.4.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "pm2": "^5.3.0",
    "prettier": "^3.0.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.2",
    "babel-jest": "^29.6.2",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
